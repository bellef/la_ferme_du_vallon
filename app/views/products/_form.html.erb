<%= simple_form_for product, html: { class: "my-5" } do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <fieldset>
    <legend><%= t('.create_or_edit_a_product') %></legend>

    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :packaging %>
    <%= f.input :price %>
    <%= f.input :picture %>
    <%= f.association :categories, as: :check_boxes %>

    <%= f.button :submit, t('.save'), class: "btn btn-primary" %>
    <%= f.button :button do %>
      <%= link_to t('.cancel'), products_path, class: "btn btn-secondary" %>
    <% end %>
  </fieldset>
<% end %>
