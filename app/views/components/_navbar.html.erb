<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
  <%= link_to t('.product_name'), root_path, class: "navbar-brand" %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarColor01">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <%= link_to t('.all_products'), products_path, class: "nav-link" %>
      </li>

      <% @categories.each do |category| %>
        <li class="nav-item <%= 'active' if navbar_active_category?(category) %>">
          <%= link_to category.title, products_path(category_id: category.id), class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</nav>
